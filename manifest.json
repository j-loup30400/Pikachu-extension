{
    "manifest_version": 2,
    "name": "RubberDuck",
    "version": "1.0",
    "author": "mancia08",
    "description": "Marc everywhere!!!",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["js/rubberDuck.js"]
    }]
}